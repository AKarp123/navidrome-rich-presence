{
  "name": "subsonic-rpc",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint-config-xo": "^0.47.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run src/index.ts --watch",
    "lint": "bunx eslint src/*.ts",
    "lint:fix": "bunx eslint src/*.ts --fix",
    "build:win64": "bun build --compile --target=bun-windows-x64 ./src/index.ts --outfile ./dist/subsonic-rpc.exe",
    "build:linux64": "bun build --compile --target=bun-linux-x64 ./src/index.ts --outfile ./dist/subsonic-rpc-linux64",
    "build:linux-arm64": "bun build --compile --target=bun-linux-arm64 ./src/index.ts --outfile ./dist/subsonic-rpc-arm64",
    "build:macos-arm64": "bun build --compile --target=bun-darwin-arm64 ./src/index.ts --outfile ./dist/subsonic-rpc-mac-arm",
    "build": "rm ./dist/*;  bun run build:win64 && bun run build:linux64 && bun run build:linux-arm64 && bun run build:macos-arm64"
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.2.2",
    "discord-api-types": "^0.38.14",
    "eslint": ">=9.25.0",
    "subsonic-api": "^3.1.2"
  }
}
